### Atlas

# Secrets
#
# Generate a secret key using command:
#
#   $ cd apps/atlas_web && mix guardian.gen.secret
#
# Copy the output below and uncomment env variable:
#
# export ATLAS_GUARDIAN_KEY=""
# export ATLAS_SECRET_KEY=""

# Users
#
# export ATLAS_ROOT_USER=
# export ATLAS_ROOT_EMAIL=

# Database

export ATLAS_POSTGRES_USER=postgres
export ATLAS_POSTGRES_PASS=postgres
export ATLAS_POSTGRES_HOST=localhost
export ATLAS_POSTGRES_DB=atlas

# Server

export ATLAS_CLUSTER_NODES="atlas01@0.0.0.0,atlas02@0.0.0.0"

### Atlas AMQP

# AMQP

export ATLAS_AMQP_RABBITMQ_HOST=localhost
export ATLAS_AMQP_RABBITMQ_PORT=5672
export ATLAS_AMQP_RABBITMQ_USER=guest
export ATLAS_AMQP_RABBITMQ_PASS=guest
export ATLAS_AMQP_RABBITMQ_VIRTUAL_HOST=""

export ATLAS_AMQP_RABBITMQ_SSL_ENABLED=false
export ATLAS_AMQP_RABBITMQ_SSL_VERIFY=
export ATLAS_AMQP_RABBITMQ_SSL_KEYFILE=
export ATLAS_AMQP_RABBITMQ_SSL_CERTFILE=
export ATLAS_AMQP_RABBITMQ_SSL_CACERTFILE=

### Atlas API

export ATLAS_API_PORT=4078

### Atlas Log

# Database

export ATLAS_LOG_POSTGRES_USER=postgres
export ATLAS_LOG_POSTGRES_PASS=postgres
export ATLAS_LOG_POSTGRES_HOST=localhost
export ATLAS_LOG_POSTGRES_DB=atlas_log

### Atlas Web

export ATLAS_WEB_PORT=4077

### Elixir Version

# Uncomment if using kiex
# export ELIXIR_VERSION="1.8.1"
# export PATH="$HOME/.kiex/elixirs/elixir-1.8.1/bin:$PATH"
# export MIX_ARCHIVES="$HOME/.kiex/mix/archives/elixir-1.8.1"

### NodeJS Version

export NODE_ENV="development"

